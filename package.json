{
    "name": "ts-backend-production-setup",
    "version": "1.0.0",
    "description": "This project setup in typescript and MongoDB for production.",
    "main": "src/server.js",
    "scripts": {
        "dist": "npx tsc",
        "dev": "cross-env NODE_ENV=development nodemon --legacy-watch src/server.ts",
        "start": "cross-env NODE_ENV=production node dist/server.js",
        "lint": "eslint .",
        "lint:fix": "eslint . --fix",
        "format:check": "prettier . --check",
        "format:fix": "prettier . --fix",
        "prepare": "husky",
        "migrate:dev": "cross-env MIGRATE_MODE=development node script/migration.js",
        "migrate:prod": "cross-env MIGRATE_MODE=production node script/migration.js",
        "test": "jest --watch --runInBand",
        "migration:generate:development": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:generate",
        "migration:generate:development:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:run",
        "migration:generate:development:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:revert",
        "migration:generate:development:create": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:create",
        "migration:generate:production": "cross-env NODE_ENV=production typeorm-ts-node-commonjs migration:generate",
        "migration:generate:production:run": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:run",
        "migration:generate:production:revert": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:revert",
        "migration:generate:production:create": "cross-env NODE_ENV=development typeorm-ts-node-commonjs migration:create"
    },
    "lint-staged": {
        "*.ts": [
            "npm run lint:fix",
            "npm run format:fix"
        ]
    },
    "author": "Jitendra Sahoo [7978020151]",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^19.5.0",
        "@commitlint/config-conventional": "^19.5.0",
        "@eslint/js": "^9.12.0",
        "@types/bcrypt": "^5.0.2",
        "@types/eslint__js": "^8.42.3",
        "@types/eslint-config-prettier": "^6.11.3",
        "@types/express": "^5.0.0",
        "@types/jest": "^29.5.13",
        "@types/node": "^22.7.5",
        "@types/source-map-support": "^0.5.10",
        "@types/supertest": "^6.0.2",
        "eslint": "^9.12.0",
        "eslint-config-prettier": "^9.1.0",
        "husky": "^9.1.6",
        "jest": "^29.7.0",
        "lint-staged": "^15.2.10",
        "nodemon": "^3.1.7",
        "prettier": "3.3.3",
        "supertest": "^7.0.0",
        "ts-jest": "^29.2.5",
        "ts-node": "10.9.2",
        "typescript": "^5.6.3",
        "typescript-eslint": "^8.8.1"
    },
    "dependencies": {
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.8",
        "bcrypt": "^5.1.1",
        "colorette": "^2.0.20",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv-flow": "^4.1.0",
        "express": "^4.21.1",
        "express-validator": "^7.2.1",
        "helmet": "^8.0.0",
        "jsonwebtoken": "^9.0.2",
        "moment": "^2.30.1",
        "mongoose": "^8.7.1",
        "pg": "^8.13.0",
        "rate-limiter-flexible": "^5.0.3",
        "reflect-metadata": "^0.2.2",
        "source-map-support": "^0.5.21",
        "ts-migrate-mongoose": "^3.8.4",
        "typeorm": "0.3.20",
        "winston": "^3.15.0",
        "winston-mongodb": "^6.0.0"
    }
}
